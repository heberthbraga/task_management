<aside 
  data-controller="sidebar" 
  data-sidebar-expanded-value="true" 
  class="bg-teal-700 py-4 px-3 w-64 shadow-2xl flex flex-col"
  data-sidebar-target="container"
>
  <div>
    <div data-sidebar-target="collapsedLogo" class="hidden">
      <%= render 'shared/logo_icon', { fill_color: 'fill-slate-300', stroke_color: 'stroke-slate-100' } %>
    </div>
    <div data-sidebar-target="expandedLogo" class="logo-icon">
      <%= render 'shared/logo', { fill_color: 'fill-slate-300', stroke_color: 'stroke-slate-100', text_color: 'text-slate-100', collapsed: false } %>
    </div>
  </div>
  <% sidebar.each_with_index do |group, i| %>
    <% @clazz = i == 0 ? 'mt-20' : 'border-t border-slate-100 mt-12 pt-6' %>
    <ul class="flex flex-col gap-y-6 <%= @clazz %>">  
      <% group.each do |item| %>
        <li>
          <%= link_to item[:path], class: 'text-slate-100 flex p-2 text-base gap-x-4 items-center rounded-lg hover:bg-teal-600' do %>
            <%= embedded_svg_icon(item[:icon]) %>
            <span data-sidebar-target="anchorName"><%= item[:name] %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <div class="flex justify-end mt-auto pt-2 mb-2">
    <button data-action="click->sidebar#toggle" data-sidebar-target="button">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="half_rotation" data-sidebar-target="collapseIcon">
        <path class="text-slate-200" d="M19.586 11l-5-5L16 4.586 23.414 12 16 19.414 14.586 18l5-5H7v-2z" fill="currentColor" opacity="0.3" />
        <path class="text-slate-200" d="M3 23H1V1h2z" fill="currentColor" opacity="0.6" />
      </svg>
    </button>
  </div>
</aside>