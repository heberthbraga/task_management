<div class="flex flex-col col-span-full sm:col-span-8 xl:col-span-4 bg-white shadow-lg rounded-2xl border border-slate-50">
    <header class="flex justify-between items-start p-4">
      <span class="text-sm text-gray-500">Jun 20, 2022</span>
      <div class="dropstart relative">
        <button 
          type="button" 
          id="dropdownLeftButton"
          data-dropdown-toggle="dropdownLeft"
          data-dropdown-placement="left"
          class="
            dropdown-toggle
            cursor-pointer
            transition
            duration-150
            ease-in-out
          "
        >
          <i class="h-4 w-4 fas fa-ellipsis-v"></i>
        </button>
        <div 
          id="dropdownLeft" 
          class="
            absolute 
            z-10 
            hidden 
            bg-white 
            divide-y 
            divide-gray-100 
            rounded 
            shadow 
            min-w-max
            w-40
            mt-6
            dark:bg-gray-700
          "
        >
          <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownLeftButton">
            <li>
              <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Edit</a>
            </li>
            <li>
              <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Delete</a>
            </li>
          </ul>
        </div>
      </div>
    </header>
    <div class="flex flex-col items-center mb-3 mt-4">
      <h2 class="font-semibold text-slate-800 text-lg cursor-pointer">Supermarket</h2>
      <p class="text-sm text-gray-500">Food, Grocery</p>
    </div>

    <%= render ProgressComponent.new(space_x: 4) %>

    <div class="flex justify-between items-center border-t-1 mt-4 p-4">
      <div class="flex justify-center items-center">
        <div class="w-8 h-8 -mx-2 overflow-hidden">
          <img class="rounded-full border border-gray-100 shadow-sm" src="https://randomuser.me/api/portraits/women/81.jpg" alt="user image" />
          <!-- <div class="absolute top-0 right-0 h-3 w-3 my-1 border-2 border-white rounded-full bg-green-400 z-2"></div> -->
        </div>
        <div class="w-8 h-8 -mx-2 overflow-hidden">
          <img class="rounded-full border border-gray-100 shadow-sm" src="https://randomuser.me/portraits/men/83.jpg" alt="user image" />
